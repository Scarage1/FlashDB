# =============================================================================
# FlashDB Environment Variables
# =============================================================================
# Copy this file to .env and customize.
# All variables are optional — defaults match the flag defaults.
# Flags take precedence over environment variables.

# ── Server ───────────────────────────────────────────────────────────────────
FLASHDB_ADDR=:6379
FLASHDB_DATA=/data
FLASHDB_PASSWORD=
FLASHDB_MAXCLIENTS=10000
FLASHDB_TIMEOUT=0
FLASHDB_LOG_LEVEL=info

# ── Web UI & API ─────────────────────────────────────────────────────────────
FLASHDB_WEB_ADDR=:8080
FLASHDB_API_TOKEN=
FLASHDB_NO_WEB=false

# ── TLS (optional) ──────────────────────────────────────────────────────────
FLASHDB_TLS_CERT=
FLASHDB_TLS_KEY=

# ── Performance ──────────────────────────────────────────────────────────────
FLASHDB_RATELIMIT=0
FLASHDB_SLOWLOG_THRESHOLD=0
