# =============================================================================
# FlashDB Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# FlashDB Server Configuration
# -----------------------------------------------------------------------------

# Server bind address (default: :6379)
FLASHDB_ADDR=:6379

# Data directory for persistence (default: /data in Docker)
FLASHDB_DATA=/data

# Authentication password (leave empty to disable auth)
FLASHDB_PASSWORD=your-secure-password-here

# Maximum concurrent clients (default: 10000)
FLASHDB_MAXCLIENTS=10000

# -----------------------------------------------------------------------------
# Docker / Production
# -----------------------------------------------------------------------------

# Docker Hub username (for CI/CD)
DOCKERHUB_USERNAME=your-dockerhub-username

# Domain name (for SSL/nginx)
DOMAIN=flashdb.example.com

# Email for Let's Encrypt SSL certificate
SSL_EMAIL=your-email@example.com

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------

# Backend API URL (for Next.js frontend)
# In production, this should point to your DigitalOcean server
NEXT_PUBLIC_API_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# DigitalOcean Deployment (GitHub Secrets - don't put actual values here)
# -----------------------------------------------------------------------------

# These should be set as GitHub repository secrets:
# DO_HOST          - Your DigitalOcean droplet IP address
# DO_USERNAME      - SSH username (usually 'root' or created user)
# DO_SSH_KEY       - Private SSH key for authentication
# DOCKERHUB_TOKEN  - Docker Hub access token (not password)

# -----------------------------------------------------------------------------
# Vercel Deployment (GitHub Secrets)
# -----------------------------------------------------------------------------

# These should be set as GitHub repository secrets:
# VERCEL_TOKEN      - Vercel API token
# VERCEL_ORG_ID     - Vercel organization/team ID
# VERCEL_PROJECT_ID - Vercel project ID
